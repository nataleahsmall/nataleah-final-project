{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}  
  <img src="img/members/{{member.image}}" alt="Queen logo" class="img-fluid">
  <p class="byline"><b>Name:</b> {{member.name}} <br><b>Instruments:</b> {{member.instruments}}<br>
  <span><b>Band Tenure:</b> {{member.tenure}}</span>
  <br><b>Birthplace: </b>{{member.birthplace}}<br>
  <span><b>Birtdate:</b> {{member.birthdate}}</span> 
  </p>
{% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}
      <h1>{{ member.name }}</h1>
  <p>{{ member.text | safe }} </p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}
