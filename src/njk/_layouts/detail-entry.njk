{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}  
  <img src="img/members/{{member.image}}" alt="Queen logo" class="img-fluid">
  <p class="byline">{{member.name}}, <br>{{member.instruments}}<br>
  <span>{{member.tenure}}</span></p>
{% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}
      <h1>{{ member.name }}</h1>
  <p>{{ member.text | safe }} </p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}
